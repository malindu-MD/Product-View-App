<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_weight="3">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="#E7E1ED"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="15dp"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/round_three"
                        android:src="@drawable/ic_launcher_foregroundkk"/>
                    <ImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/round_three"
                        android:src="@drawable/ic_launcher_foreground"/>

                    <com.synnapps.carouselview.CarouselView
                        android:layout_width="match_parent"
                        android:id="@+id/caroselview"
                        android:layout_height="250dp">


                    </com.synnapps.carouselview.CarouselView>




                </RelativeLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/apple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="Apple Watch Nike 5"
                android:textColor="#0F044C"
                android:textSize="28sp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A watch is a portable timepiece intended tobe carried or worn by a person."
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colour:"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/image1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/imgone"/>

                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/image2"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>
                <ImageButton
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/image3"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <RatingBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                style="@style/Widget.AppCompat.RatingBar"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:numStars="1"
                android:scaleY="0.6"
                android:scaleX="0.6"
                android:rating="1"
                android:theme="@style/RatingBar"
                android:id="@+id/star"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5(25 Review)"
                android:textSize="15dp"
                android:textColor="#d4af37"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="5dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Size"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:id="@+id/size"
                android:layout_marginTop="5dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:text="24"
                    android:button="@color/transp"
                    android:textAlignment="center"
                    android:textColor="@drawable/text_color"
                    android:id="@+id/one"
                    android:onClick="onRadioButtonClicked"
                    android:background="@drawable/radio_selector"
                    android:layout_marginLeft="5dp">

                </RadioButton>
                <RadioButton
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:text="28"
                    android:layout_marginLeft="5dp"
                    android:textAlignment="center"
                    android:textColor="@drawable/text_color"
                    android:id="@+id/two"
                    android:onClick="onRadioButtonClicked"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transp">

                </RadioButton>
                <RadioButton
                    android:layout_width="40dp"
                    android:layout_height="28dp"
                    android:text="32"
                    android:button="@color/transp"
                    android:textAlignment="center"
                    android:textColor="@drawable/text_color"
                    android:id="@+id/three"
                    android:onClick="onRadioButtonClicked"
                    android:background="@drawable/radio_selector"
                    android:layout_marginLeft="5dp">

                </RadioButton>






            </RadioGroup>




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:id="@+id/qut"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$450.0"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:id="@+id/price"
                android:layout_marginTop="10dp"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="-"
                android:textSize="20sp"
                android:layout_toRightOf="@id/qut"
                android:id="@+id/decrease"
                android:background="@drawable/round"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:onClick="decrease"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/quantity"
                android:layout_toRightOf="@id/decrease"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="+"
                android:textSize="20sp"
                android:layout_toRightOf="@id/quantity"
                android:id="@+id/increase"
                android:background="@drawable/round"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:onClick="increase"/>



        </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add To Cart"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:paddingRight="85dp"
                    android:paddingLeft="85dp"
                    android:onClick="cart"
                    android:background="@drawable/round_two"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/heart"


                    android:layout_marginTop="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"/>



            </RelativeLayout>


        </LinearLayout>












    </LinearLayout>


</RelativeLayout>